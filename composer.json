{
  "name": "premierstacks/mezzio-api-template",
  "description": "premierstacks mezzio api template",
  "type": "project",
  "keywords": [
    "tomchochola",
    "tomaschochola",
    "Tomas Chochola",
    "Tom치코 Chochola",
    "premierstacks",
    "mezzio-api-template"
  ],
  "homepage": "https://github.com/premierstacks/mezzio-api-template",
  "readme": "./README.md",
  "license": "CC-BY-ND-4.0",
  "authors": [
    {
      "name": "Tom치코 Chochola",
      "email": "chocholatom1997@gmail.com",
      "homepage": "https://github.com/tomchochola",
      "role": "Author"
    }
  ],
  "support": {
    "email": "chocholatom1997@gmail.com",
    "issues": "https://github.com/premierstacks/mezzio-api-template/issues",
    "source": "https://github.com/premierstacks/mezzio-api-template.git",
    "docs": "https://github.com/premierstacks/mezzio-api-template"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/tomchochola"
    }
  ],
  "require": {
    "php": "~8.3.26",
    "laminas/laminas-config-aggregator": "^1.19.0",
    "laminas/laminas-db": "^2.20.0",
    "laminas/laminas-diactoros": "^3.8.0",
    "laminas/laminas-servicemanager": "4.5.0",
    "mezzio/mezzio": "^3.25.0",
    "mezzio/mezzio-fastroute": "^3.14",
    "ext-apcu": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4.3",
    "roave/security-advisories": "@dev",
    "premierstacks/php-cs-fixer-stack": "@dev",
    "premierstacks/phpstan-stack": "@dev"
  },
  "autoload": {
    "psr-4": {
      "App\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "./tests"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/premierstacks/php-cs-fixer-stack.git",
      "no-api": true
    },
    {
      "type": "vcs",
      "url": "https://github.com/premierstacks/phpstan-stack.git",
      "no-api": true
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "audit": {
      "abandoned": "fail"
    },
    "platform": {
      "php": "8.3.26"
    },
    "platform-check": true,
    "process-timeout": 0
  },
  "scripts": {
    "composer:audit": "@composer audit",
    "composer:install": "@composer install",
    "composer:platform": "@composer check-platform-reqs",
    "composer:update": "@composer update --with-all-dependencies",
    "composer:validate": "@composer validate --strict --no-check-all",
    "dump:development": "@composer dump-autoload -o --dev --strict-psr",
    "dump:production": "@composer dump-autoload -a --no-dev --strict-psr",
    "fix:php-cs-fixer": "@php php-cs-fixer fix",
    "lint:php-cs-fixer": "@php php-cs-fixer check",
    "stan:phpstan": "@php phpstan analyse",
    "start:development": [
      "@putenv APP_ENV=local",
      "@php -S 0.0.0.0:8080 -t ./public"
    ],
    "start:coverage": [
      "@putenv APP_ENV=local",
      "@php -S 0.0.0.0:8080 -t ./.phpunit.coverage/html"
    ],
    "test:phpunit": "@php phpunit",
    "post-install-cmd": "@config:clear",
    "post-update-cmd": "@config:clear",
    "config:clear": "@php -r 'apcu_clear_cache();'"
  }
}
